<%= form_for @article do |f| %>
      <div class="field">
        <%= f.label 'Title', class: 'label' %>
        <div class="control">
          <%= f.text_field :title, class: 'input', placeholder: 'Article title here...' %>
        </div>
      </div>

      <div class="field">
        <%= f.label 'Content', class: 'label' %>
        <div class="control">
          <%= f.text_area :content, class: 'textarea', placeholder: 'Article content here...', rows: '20' %>
        </div>
      </div>

      <div class="field">
        <%= f.label 'Image Uploader', class: 'label' %>
        <div class="control">
          <%= f.text_field :imgurl, class: 'input', placeholder: 'Article image link here...'%>
        </div>
      </div>

    <%= f.submit class: 'button is-primary is-outlined'%>
<% end %>