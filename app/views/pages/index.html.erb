
<div class="box hero is-light widescreen">
  <% @pages.each do |page| %>
  <div class="box">
    <article class="media">
      <figure class="media-left">
        <p class="image is-128x128">
          <img class="is-rounded" src="<%= page.imgurl%>">
        </p>
      </figure>

      <div class="media-content">
        <div class="content">
          <p>
            <strong><%= page.title%></strong>
            <br>
            <span style="display:block;text-overflow: ellipsis;height: 75px;overflow: hidden;">
              <%= page.content %>
            </span>

            <%= link_to "... read more", page %>

          </p>
        </div>
      </div>

      <nav class="level is-mobile">
        <div class="level-right">
          <a class="level-item">
            <span class="icon is-small"><i class="fas fa-heart"></i></span>
          </a>
        </div>
      </nav>
    </article>
  </div>
  <% end %>
</div>
