<div class="container is-fluid">
<span class="title is-6">Your Posts</span>
  <% @user.pages.reverse_each do |post| %>
  <div class="box ">
    <div class="notification is-light">
      <% if post.user_id == current_user.id %>
      <!-- <nav class="navbar-end edit-bar" role="navigation" aria-label="main navigation"> -->
      <!-- <div class="navbar-item has-dropdown is-hoverable edit-button"> -->
      <!-- <a class="navbar-link dropdown-right is-arrowless"> -->
      <p class="hover_description">Edit</p>
      <%= link_to "", (edit_page_path(post)), :class=>"navbar-item fas fa-edit " %>
      <!-- <i class="far fa-edit "></i> -->

      <!-- </nav> -->
      <% end %>

      <h1 class="title"><%= post.title %></h1>
      <div class="box">
        <article class="media">
          <div class="media-content">
            <figure class="image">
              <img src="<%= post.imgurl %>" alt="<%= post.imgurl %>">
              <br>
            </figure>
          </div>
        </article>
      </div>
      <p><%= simple_format(post.content) %></p><br>

    <!-- Comment div goes here -->
    <div class="box">
      <% post.comments.reverse_each do |comment|%>
      <% if comment.content != nil %>
      <div class="box">
      <p><%= comment.content %></p>
      </div>
      <% end %>
      <% end %>
      <%= form_tag comments_path do |f| %>
      <%= hidden_field_tag(:"comment[user_id]", current_user.id) %>
      <%= hidden_field_tag(:"comment[page_id]", post.id) %>
      <div class="field has-addons">

          <%= text_field_tag :"comment[content]", ' ', class: "input is-normal is-info", placeholder: "Write a comment..."%>

        <div class="control">
        <%= submit_tag("Comment", options = {:class => "button is-rounded"})%>
        </div>
      </div>

      <% end %>
      </div>
    </div>
  </div>
  <% end %>

</div>
