<div id="login">
  <div class="login-card">
    <h3 class="card-title">Sign Up</h3>
    <div class="content">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for @user, url: signup_path do |f| %>
        <%= render 'shared/error_messages' %>

        <div class="form-label-group">
          <%= f.label :name, value: 'username' %>
          <%= f.text_field :name, id: 'username', class: 'form-control', :required => true, :autofocus => true %>
        </div>

        <div class="form-label-group">
          <%= f.label :email %>
          <%= f.email_field :email, id: 'email', class: 'form-control', :required => true %>
        </div>

        <div class="form-label-group">
          <%= f.label :password %>
          <%= f.password_field :password, id: 'password', class: 'form-control', :required => true %>
        </div>

        <%= f.submit "Create my account", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
