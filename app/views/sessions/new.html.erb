<div id="login">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign In</h5>
            <h2>Please Sign In</h2>
            <hr>
            <div class="content">
              <%= form_for(:session, url: login_path, :html => {:class => 'form-signin'}) do |f| %>
              <div class="form-label-group">
                <%= f.label :email %>
                <%= f.text_field :email, class: 'form-control', placeholder: 'email', input: 'required', input: 'autofocus' %>
              </div>

              <div class="form-label-group">
                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control', placeholder: 'Password', input: 'required' %>
              </div>


              <%= f.submit "Log in", class: "btn btn-primary", value:'login' %>
              <% end %>
              <br>
              <p>New user? <%= link_to "Sign up now!", signup_path %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
